{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "shell",
      "command": "bun",
      "args": ["run", "watch"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": {
          "regexp": "^âœ˜ \\[ERROR\\] (.+)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[esbuild\\] watching",
          "endsPattern": "^\\[esbuild\\] build complete"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "bun",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "test:unit",
      "type": "shell",
      "command": "bun",
      "args": ["run", "test:unit"],
      "group": "test"
    }
  ]
}
